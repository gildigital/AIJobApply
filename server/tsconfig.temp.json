{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "noEmitOnError": false,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strict": false,
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2022",
    "outDir": "dist",
    "paths": {
      "@shared/*": ["./shared/*"]
    }
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/workable-scraper-updated.ts",
    "**/workable-scraper.backup.ts",
    "routes/test-data-routes.ts"
  ]
}
